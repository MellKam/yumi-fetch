{
  "tasks": {
    "build": "deno run -A npm:vite build && deno run -A npm:typescript/tsc",
    "benchmark": "deno bench -A ./benchmarks/basic.ts",
    "lint:check": "deno lint && deno fmt --check"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "singleQuote": false,
    "semiColons": true,
    "indentWidth": 2,
    "include": ["./src/", "./examples/", "./benchmarks/"]
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    },
    "include": ["./src/"]
  },
  "nodeModulesDir": true
}
